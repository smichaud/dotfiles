Xft.dpi: 96
Xft.antialias: true
Xft.rgba: rgb
Xft.hinting: true
Xft.hintstyle: hintslight

URxvt.depth: 32
URxvt.geometry: 90x30
URxvt.transparent: false
URxvt.fading: 0
URxvt.loginShell: true
URxvt.saveLines: 5000
URxvt.internalBorder: 2
URxvt.lineSpace: 0

# Disable the shit that interfer with ctrl+shift...
URxvt.iso14755 : false

# Fonts
URxvt.allow_bold: false
URxvt.font:                       9x15,xft:TerminessTTFNerdFontMono:pixelsize=22:antialias=true
!URxvt.font: xft:Ubuntu Mono derivative Powerline:style=Regular:pixelsize=18:antialias=true
URxvt.boldFont: xft:Ubuntu Mono derivative Powerline:style=Bold:pixelsize=22:antialias=true  

# Fix font space
URxvt*letterSpace: 1

# Scrollbar
URxvt.scrollStyle: rxvt
URxvt.scrollBar: false

# Cursor
URxvt.cursorBlink: true
URxvt.cursorColor: #657b83
URxvt.cursorUnderline: false

# Pointer
URxvt.pointerBlank: true

# Perl extensions
URxvt.perl-ext-common: default,clipboard,matcher,resize-font,url-select,keyboard-select


# resize-font: resize font on the fly
URxvt.keysym.Control-minus: resize-font:smaller
URxvt.keysym.Control-equal: resize-font:bigger
URxvt.keysym.Control-0x2b: resize-font:reset

# matcher: select/open URLs (j/k for previous/next)
URxvt.matcher.button: 1
URxvt.keysym.M-w: perl:url-select:select_next
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.rend.0: Uline Bold fg5

# clipboard: copy/paste in terminal
URxvt.copyCommand: xclip -i -selection clipboard
URxvt.pasteCommand: xclip -o -selection clipboard
URxvt.keysym.C-C: perl:clipboard:copy
URxvt.keysym.C-V: perl:clipboard:paste

# keyboard select: vim-like mode in terminal
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search
URxvt.keyboard-select.clipboard: true

